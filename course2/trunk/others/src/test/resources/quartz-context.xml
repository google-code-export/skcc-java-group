<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

	<bean id="helloJob" class="org.springframework.scheduling.quartz.JobDetailFactoryBean">
		<property name="jobClass" value="com.skcc.tutorial.quartz.HelloSpringJob"/>
		<property name="jobDataAsMap">
			<map>
				<entry key="name" value="World"/>
			</map>
		</property>
	</bean>
	<bean id="helloTrigger" class="org.springframework.scheduling.quartz.SimpleTriggerFactoryBean">
		<property name="jobDetail" ref="helloJob"/>
		<property name="repeatInterval" value="2000"/>
	</bean>
	
	<bean class="org.springframework.scheduling.quartz.SchedulerFactoryBean">
		<property name="triggers">
			<list>
				<ref bean="helloTrigger"/>
			</list>
		</property>
	</bean>
</beans>
